@model BookClient_MVC.Models.Book

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
    <!-- Include Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container mt-5">
        @using (Html.BeginForm("Create", "Book", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

            <div class="card shadow-lg p-4">
                <h3 class="card-title text-center mb-4">Add New Book</h3>
                @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

                <div class="form-group mb-3">
                    @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "form-label fw-bold" })
                    @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                </div>

                <div class="form-group mb-3">
                    @Html.LabelFor(model => model.Author, htmlAttributes: new { @class = "form-label fw-bold" })
                    @Html.EditorFor(model => model.Author, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Author, "", new { @class = "text-danger" })
                </div>

                <div class="form-group mb-3">
                    @Html.LabelFor(model => model.PublishedDate, htmlAttributes: new { @class = "form-label fw-bold" })
                    @Html.EditorFor(model => model.PublishedDate, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.PublishedDate, "", new { @class = "text-danger" })
                </div>

                <div class="form-group mb-3">
                    @Html.LabelFor(model => model.ISBN, htmlAttributes: new { @class = "form-label fw-bold" })
                    @Html.EditorFor(model => model.ISBN, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ISBN, "", new { @class = "text-danger" })
                </div>

                <div class="form-group mb-3">
                    @Html.LabelFor(model => model.BookCoverPhoto, "Book Cover Photo", htmlAttributes: new { @class = "form-label fw-bold" })
                    <div class="input-group">
                        <input type="file" name="ImageFile" id="ImageFile" class="form-control" />
                        <label class="input-group-text" for="ImageFile">Upload</label>
                    </div>
                    @Html.ValidationMessageFor(model => model.BookCoverPhoto, "", new { @class = "text-danger" })
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary btn-lg">Create Book</button>
                </div>
            </div>
        }

        <div class="text-center mt-4">
            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
        </div>
    </div>

    <!-- Include Bootstrap JS (optional) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
